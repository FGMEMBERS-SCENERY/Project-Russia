  <animation>
    <type>material</type>
    <object-name>gold</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.65</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1.000 </red>
      <green> 0.765 </green>
      <blue>  0.247 </blue>
    </emission>
  </animation>
  
  
  <animation>
    <type>material</type>
