<?xml version="1.0"?>

<PropertyList>

  <path>pulkovo_tower.ac</path>

  <animation>
    <type>range</type>
    <max-m>4500</max-m>
  </animation>  
  
   <animation>
    <type>material</type>
    <object-name>light_wi</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.65</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.6 </red>
      <green> 0.6 </green>
      <blue>  0.65 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>light_wi</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.6</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>small</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.255 </red>
      <green> 0.232 </green>
      <blue>  0.154 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>small</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.55</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>long</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.62</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.248 </red>
      <green> 0.233 </green>
      <blue>  0.180 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>long</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.58</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>
  
  </PropertyList>
