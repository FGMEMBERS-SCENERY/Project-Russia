<?xml version="1.0"?>

<PropertyList>

  <path>pulkovo_2_long.ac</path>

 <animation>
    <type>range</type>
    <max-m>600</max-m>
  </animation>  
  
<animation>
    <type>material</type>
    <object-name>hi</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.65</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.749 </red>
      <green> 0.725 </green>
      <blue>  0.643 </blue>
    </emission>
  </animation>
  
  
  <animation>
    <type>material</type>
    <object-name>hi</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.6</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>s_pb</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.65</value>
      </greater-than>
    </condition>
    <emission>
      <red>   0.878 </red>
      <green> 1.000 </green>
      <blue>  1.000 </blue>
    </emission>
  </animation>
  
  
  <animation>
    <type>material</type>
    <object-name>s_pb</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.6</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>
  
  
</PropertyList>